                    <input type="submit" value="Next >" class="mt-2 btn btn-success btn-lg pull-right " />
                </div>
                <div class="footer-copyright">
                    <img src="~/Content/Images/logo_black.png" />
                    <div class="steps-footer">
                        &copy; 2019 TOCICO. All Rights Reserved.
                    </div>
                </div>
            </footer>
        </div>
    </div>
